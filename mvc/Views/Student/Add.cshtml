@{
    ViewData["Title"] = "Add";
}
@model mvc.Models.AddStudentViewModel
<h1>Add Student</h1>

<form method="post" onsubmit="showMessage()">
    <div class="mt-3">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label>Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<script>function showMessage() {
        alert("Id is automatically assigned");
    }</script>
